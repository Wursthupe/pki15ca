Root:
openssl genrsa -out ca-root-key.key 4096
openssl req -x509 -new -nodes -extensions v3_ca -key ca-root-key.key -days 3650 -out ca-root-cert.crt -sha512

CA:
openssl genrsa -out ca-key.pem 2048
openssl req -new -key ca-key.key -out ca-cert.csr -sha512
openssl x509 -req -in ca-cert.csr -CA ../ca-root-cert.crt -CAkey ../ca-root-key.key -CAcreateserial -out ca-cert.crt -days 3650 -sha512

RA:
openssl genrsa -out ra-key.pem 2048
openssl rsa -outform der -in ra-key.pem -out ra-key.key
openssl req -new -key ra-key.pem -out ra-cert.csr -sha512
openssl x509 -req -in ra-cert.csr -CA ../ca/ca-cert.crt -CAkey ../ca/ca-key.key -CAcreateserial -out ra-cert.crt -days 3650 -sha512

VA:
openssl genrsa -out va-key.pem 2048
openssl rsa -outform der -in va-key.pem -out va-key.key
openssl req -new -key va-key.pem -out va-cert.csr -sha512
openssl x509 -req -in va-cert.csr -CA ../ca/ca-cert.crt -CAkey ../ca/ca-key.key -CAcreateserial -out va-cert.crt -days 3650 -sha512
